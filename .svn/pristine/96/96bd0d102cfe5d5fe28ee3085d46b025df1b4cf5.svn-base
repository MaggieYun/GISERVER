class Geometry:
	'''
	几何数据determines where the graphic is located
	
	'''
	def __init__(self,gtype,location):
		'''
		@gtype:point, multipoint, polyline, polygon, or extent
		@location:对应的坐标或坐标集合
		'''
		self.type = gtype 
		self.location = location

