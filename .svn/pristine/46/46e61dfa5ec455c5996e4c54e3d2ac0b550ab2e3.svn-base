    def parse(self):
        pass

    def set_rule(self,rule):
        self.rule = rule
        
    @classmethod
    def create_symbol(cls,kw):
        if kw.has_key("icon"):     #点图层
            return PointSymbol(kw)
        elif kw.has_key("color"):   #线图层
            return LineSymbol(kw)     

             
