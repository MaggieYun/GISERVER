<Map  srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
  <Style name="Style1">
  	<Rule>
	    <LineSymbolizer stroke="green" stroke-width="2" />
	    <TextSymbolizer size="10" fill="white" face-name="Microsoft YaHei Regular" halo-fill="#2E2F39" halo-radius="1" wrap-width="20">[road_name]</TextSymbolizer>
  	</Rule>
  </Style>

  <Layer name="PostGIS Layer" status="on"  srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
      <StyleName>Style1</StyleName>
  </Layer>

</Map>